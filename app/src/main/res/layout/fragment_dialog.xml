<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutMain"
    android:animateLayoutChanges="true"
    android:background="@color/icons"
    android:layout_width="match_parent" android:layout_height="match_parent">
  <com.github.pierry.fitloader.RotateLoading
      android:id="@+id/rotateLoading"
      android:layout_width="@dimen/rotate_loading"
      android:visibility="gone"
      android:layout_height="@dimen/rotate_loading"
      app:loading_width="@dimen/rotate_loading_width"
      android:background="@color/transparent_white"
      android:layout_centerInParent="true"
  />
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/body"
      android:animateLayoutChanges="true"
      android:orientation="horizontal"
  >
    <LinearLayout android:layout_width="wrap_content"
        android:id="@+id/buttons"
        android:layout_height="wrap_content">
      <Button
          android:text="@string/weekday"
          android:background="@color/transparent_white"
          android:textColor="@color/blue"
          android:id="@+id/weekday"
          android:layout_marginTop="@dimen/margin_default"
          android:layout_marginBottom="@dimen/margin_default"
          android:layout_marginLeft="@dimen/margin_default"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <Button
          android:text="@string/saturday"
          android:background="@color/transparent_white"
          android:layout_marginTop="@dimen/margin_default"
          android:layout_marginBottom="@dimen/margin_default"
          android:layout_marginLeft="@dimen/margin_tiny"
          android:textColor="@color/blue"
          android:id="@+id/saturday"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <Button
          android:text="@string/sunday"
          android:background="@color/transparent_white"
          android:layout_marginTop="@dimen/margin_default"
          android:layout_marginBottom="@dimen/margin_default"
          android:layout_marginLeft="@dimen/margin_tiny"
          android:textColor="@color/blue"
          android:id="@+id/sunday"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/weekdayDivider"
        android:layout_below="@+id/buttons"
        android:layout_marginRight="@dimen/margin_default"
        android:layout_marginLeft="@dimen/margin_default"
        android:background="@color/rt_silver"/>

    <LinearLayout
        android:id="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/weekdayDivider"
        android:layout_marginTop="@dimen/margin_default"
        android:animateLayoutChanges="true"
        android:layout_height="match_parent">
      >
      <android.support.v7.widget.RecyclerView
          android:id="@+id/recyclerView"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scrollbars="vertical"/>
    </LinearLayout>
  </RelativeLayout>
</RelativeLayout>